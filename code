Public Class Form1
    Dim currguess As String
    Dim currword As String
    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        Call Wordstore()
    End Sub

    Private Sub Guesskeydown(sender As Object, e As KeyEventArgs) Handles TextBox1.KeyDown
        'THIS SUB IS THE TEXT GUEghghghghSS'
        If e.KeyCode = Keys.Enter Then
            currguess = TextBox1.Text
            TextBox1.Text = ""
        End If
    End Sub

    Private Sub TextBox1_TextChanged(sender As Object, e As EventArgs) Handles TextBox1.TextChanged

    End Sub
    Private Sub Wordstore()
        currguess = TextBox1.Text
        Dim word(7) As String
        Dim rando As Integer
        word(0) = "cat"
        word(1) = "dog"
        word(2) = "car"
        word(3) = "bar"
        word(4) = "far"
        word(5) = "lol"
        word(6) = "war"
        word(7) = "fun"
        Randomize()
        rando = Int(Rnd() * 8) + 2
        If rando = 1 Then
            lbl1.Text = word(0)
        ElseIf rando = 2 Then
            lbl1.Text = word(1)
        ElseIf rando = 3 Then
            lbl1.Text = word(2)

        ElseIf rando = 4 Then
            lbl1.Text = word(3)
        ElseIf rando = 5 Then
            lbl1.Text = word(4)
        ElseIf rando = 6 Then
            lbl1.Text = word(5)
        ElseIf rando = 7 Then
            lbl1.Text = word(6)
        ElseIf rando = 8 Then
            lbl1.Text = word(7)
        End If



        MsgBox(rando)

        TextBox2.Text = "currword"

        Dim countr As Integer
        Dim event1 As String


        event1 = InStr(currword, currguess, CompareMethod.Text)

        If event1 = 0 Then
            countr += 1
        ElseIf event1 = 1 Then
            lbl1.Text = Mid(currword, 1, 1)
        ElseIf event1 = 2 Then
            lbl2.Text = Mid(currword, 2, 2)
        ElseIf event1 = 3 Then
            lbl3.Text = Mid(currword, 3, 3)
        End If
    End Sub
    Private Sub guess()

    End Sub
End Class


